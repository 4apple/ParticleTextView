<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yasic.library.particletextview.View.ParticleTextView
        android:id="@+id/particleTextView"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>

    <Button
        android:id="@+id/btn_start_animation"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Start Animation"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_stop_animation"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Stop Animation"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_pause_animation"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Pause Animation"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_resume_animation"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Resume Animation"
        android:textAllCaps="false"/>
</LinearLayout>